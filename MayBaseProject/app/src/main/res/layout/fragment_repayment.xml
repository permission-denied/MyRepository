<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/virtualStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color" />

    <include layout="@layout/view_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_165"
        android:drawablePadding="@dimen/dp_20"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="暂时没有贷款单数据"
        android:textColor="@color/blue_ac"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_apply_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_98"
        android:background="@drawable/shape_solid_half_circle_mian"
        android:text="@string/go_loan"
        android:textColor="@color/white" />
</LinearLayout>